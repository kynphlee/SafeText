<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.modernmotion.safetext"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="18"
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
 
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    
     <!-- SMS content provider -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    	
    <application
        android:allowBackup="true"
        android:icon="@drawable/st_logo_orange"
        android:label="@string/app_name" >

        <activity
            android:name="com.modernmotion.safetext.STSplash"
            android:label="@string/app_name"
            android:theme="@style/AppThemeSplash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.modernmotion.safetext.STSignup"
            android:label="@string/title_activity_stsignup"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.modernmotion.safetext.STStatus"
            android:label="@string/title_activity_ststatus"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name="com.modernmotion.safetext.util.STUtils"
            android:label="@string/title_activity_stutils" >
        </activity>
        
        <service
            android:name="com.modernmotion.safetext.SMSCaptureService"
            android:enabled="true"
            android:exported="false" >
        </service>
        
        <service 
            android:name="com.modernmotion.safetext.STActivityRecognizer"
            android:enabled="true"
            android:exported="false" >            
        </service>
    </application>

</manifest>